{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with GCC 11.2.0 mingw",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"-std=c++20",
				"-I${workspaceFolder}\\include",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${fileDirname}\\Output.exe",
				"-L${workspaceFolder}\\lib",
				"-lglew32",
				"-lglfw3",
				"-lgdi32",
				"-lopengl32"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw64\\bin\\g++.exe"
		}
	]
}